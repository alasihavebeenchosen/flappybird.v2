import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)
import java.util.List; 

public class FlappyBird extends SmoothMover
{
    private static final Color defaultColor = new Color(255, 216, 0);
     
    int counter = 0; 
    double dy = 0;
    double gravity = 1.3;
    double boost = -15.0;
    
    public FlappyBird()
    {
    }
     
       
    public void act() 
    {
        if ( dy < 10 && dy > -10){
          //try replacing setroation with turn(30)
          setRotation(30);
        }
        
        setLocation( geX(), (int) (getY() + dy) );
        checkKeyPress();
          
        if (getY() > getWorld().getHeight()) {
            GameOver gameOver = new GameOver();
            getWorld().addObject(gameOver, getWidth()/2, getWorld().getHeight()/2);
            Greenfoot.stop();
        }
        
        dy += g;
        
        
    }
    
    public void checkKeyPress()
    {
        if(Greenfoot.isKeyDown("up"))
        {
            dy = boost;
        }
    }    
     
    
}
